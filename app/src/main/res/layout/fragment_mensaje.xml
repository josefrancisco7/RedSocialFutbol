<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mensajes"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNuevoMensaje"/>

    <!-- Botón nuevo mensaje -->
    <ImageButton
        android:id="@+id/btnNuevoMensaje"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_input_add"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Nuevo mensaje"
        app:tint="@color/green_light"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista de conversaciones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvConversaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintBottom_toTopOf="@+id/includeBottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Mensaje vacío -->
    <TextView
        android:id="@+id/tvVacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No tienes conversaciones\nEnvía un mensaje a alguien para comenzar"
        android:textColor="@color/white"
        android:alpha="0.6"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/rvConversaciones"
        app:layout_constraintBottom_toBottomOf="@+id/rvConversaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Barra inferior -->
    <include
        android:id="@+id/includeBottomBar"
        layout="@layout/barra_inferior"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/green_light"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>