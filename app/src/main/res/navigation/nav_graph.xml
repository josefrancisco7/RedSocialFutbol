<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.fran.futbolfanatico.fragmets.InicioSesionFragment"
        android:label="Iniciar Sesion" >
        <action
            android:id="@+id/registrarse"
            app:destination="@id/registroFragment" />
        <action
            android:id="@+id/iniciarSesion"
            app:destination="@id/paginaInicioFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registroFragment"
        android:name="com.fran.futbolfanatico.fragmets.RegistroFragment"
        android:label="Crear Cuenta" >
        <action
            android:id="@+id/cuentaCreada"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/paginaInicioFragment"
        android:name="com.fran.futbolfanatico.fragmets.PaginaInicioFragment"
        android:label="Pagina Inicio"
        tools:layout="@layout/fragment_pagina_inicio" >
        <action
            android:id="@+id/action_paginaInicioFragment_to_comentarioFragment"
            app:destination="@id/comentarioFragment" />
    </fragment>
    <fragment
        android:id="@+id/crearPublicacionFragment"
        android:name="com.fran.futbolfanatico.fragmets.CrearPublicacionFragment"
        android:label="CrearPublicacionFragment" />
    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.fran.futbolfanatico.fragmets.PerfilFragment"
        android:label="PerfilFragment" >
        <action
            android:id="@+id/action_perfilFragment_to_comentarioFragment"
            app:destination="@id/comentarioFragment" />
        <action
            android:id="@+id/action_perfilFragment_to_listaUsuariosFragment"
            app:destination="@id/listaUsuariosFragment" />
    </fragment>
    <fragment
        android:id="@+id/editarPerfilFragment"
        android:name="com.fran.futbolfanatico.fragmets.EditarPerfilFragment"
        android:label="EditarPerfilFragment" >
        <action
            android:id="@+id/action_editarPerfilFragment_to_perfilFragment"
            app:destination="@id/perfilFragment" />
    </fragment>
    <fragment
        android:id="@+id/perfilOtrosUsuariosFragment"
        android:name="com.fran.futbolfanatico.fragmets.PerfilOtrosUsuariosFragment"
        android:label="PerfilOtrosUsuariosFragment" >
        <action
            android:id="@+id/action_perfilOtrosUsuariosFragment_to_paginaInicioFragment"
            app:destination="@id/paginaInicioFragment" />
        <argument
            android:name="uid"
            app:argType="string" />
        <action
            android:id="@+id/action_perfilOtrosUsuariosFragment_to_comentarioFragment"
            app:destination="@id/comentarioFragment" />
    </fragment>
    <fragment
        android:id="@+id/comentarioFragment"
        android:name="com.fran.futbolfanatico.fragmets.ComentarioFragment"
        android:label="ComentarioFragment" >
        <argument
            android:name="id_publicacion"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/mensajeFragment"
        android:name="com.fran.futbolfanatico.fragmets.MensajeFragment"
        android:label="MensajeFragment" >
        <action
            android:id="@+id/action_mensajeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.fran.futbolfanatico.fragmets.ChatFragment"
        android:label="ChatFragment" >
        <argument
            android:name="conversacion_id"
            app:argType="string" />
        <argument
            android:name="otro_uid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/buscarUsuariosMensajesFragment"
        android:name="com.fran.futbolfanatico.fragmets.BuscarUsuariosMensajesFragment"
        android:label="BuscarUsuariosMensajesFragment" />
    <fragment
        android:id="@+id/listaUsuariosFragment"
        android:name="com.fran.futbolfanatico.fragmets.ListaUsuariosFragment"
        android:label="ListaUsuariosFragment" />
    <fragment
        android:id="@+id/busquedaFragment"
        android:name="com.fran.futbolfanatico.fragmets.BusquedaFragment"
        android:label="BusquedaFragment" />
</navigation>